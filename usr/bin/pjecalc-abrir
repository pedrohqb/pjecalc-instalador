#!/bin/bash


if ! [ -e "$HOME/PjeCalc/bin/pjecalc.jar" ]; then

    kdialog --msgbox $"O PjeCalc ainda não está instalado.
    
    " --title "PjeOffice não instaldo!"
    exit 1
fi

cd "$HOME/PjeCalc/"

if [ "$(ps -aux | grep -i pjecalc.jar | grep java)" = "" ]; then
    echo "sim"
    export FONTCONFIG_FILE="/usr/share/pjecalc/config/pjecalc-fonts.conf"
	exec /usr/lib/jvm/zulu-8-amd64/bin/java -Duser.timezone=GMT-3 -Dfile.encoding=ISO-8859-1 -Dseguranca.pjecalc.tokenServicos=pW4jZ4g9VM5MCy6FnB5pEfQe -Xms1024m -Xmx2048m -XX:MaxPermSize=512m -jar bin/pjecalc.jar &
fi


ESPERAR=1
while [  $ESPERAR = 1 ]; do

    curl http://localhost:9257/pjecalc
    if [ "$?" = 0 ]; then
        ESPERAR=0
        exec xdg-open http://localhost:9257/pjecalc/pages/principal.jsf
    fi
    sleep 1
done
